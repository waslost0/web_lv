@model IEnumerable<Note>
@{
    ViewData["Title"] = "Index";
}


<div class="container row p-0 m-0">
    <div class="col-6 mb-2">
        <h2 class="text-info">Notes</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="New" asp-controller="Notes" class="btn btn-info form-control text-white cursor-pointer">
            Add New Note
        </a>
    </div>


    @if (!Model.Any())
    {
        <div class="col-6 mb-2">
            <p>We dont have any note</p>
        </div>
    }
    else
    {
        <div class="col-12 border p-3">
            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    }


</div>

@section Scripts
{
    <script src="~/js/notesList.js"></script>
}